<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :company %><br>
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date, start_year: 1971, end_year: Time.now.year%>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :large_category %><br>
    <%= f.select( :large_category , options_for_select(%w{ 豚骨 醤油 味噌 塩 焼きそば うどん そば パスタ その他 }, '豚骨')) %>
  </div>
  <div class="field">
    <%= f.label :small_category %><br>
<%= f.select( :small_category , options_for_select(%w{ 太麺 普通 細麺 }, '普通')) %>
  </div>
  <div class="field">
    <%= f.label :remaining_count %><br>
    <%= f.number_field :remaining_count %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
