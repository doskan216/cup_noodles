<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div class="mdl-grid" id="topgrid">
  <div class="mdl-cell mdl-cell--12-col"><h2 id="toph2">商品一覧</h2></div>
</div>


<div class="mdl-grid" id="background">

  <% @products.each do |product| %>
<figure>
  <div class="mdl-cell mdl-cell--4-col">
    <!-- Square card -->
    <style>
      .demo-card-square.mdl-card {
        width: 320px;
        height: 320px;
      }
      .demo-card-square > .mdl-card__title {
        color: #fff;
      }
    </style>
      <div class="demo-card-square mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand" style="background:
        url(<%= image_url("#{product.image_url}")%>) bottom right 15% no-repeat #46B6AC;">
        <figcaption>
          <h3><%= product.name %></h3>
          <p><%= product.description %></p>
        </figcaption>
      </div>
    <div class="mdl-card__supporting-text">
      商品名:<%= product.name %>
      価格:<%= number_to_currency(product.price) %>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col">
          <%= button_to("商品詳細ページへ", detail_page_path(product.id), method: :get, class:"mdl-button mdl-js-button mdl-button--primary") %>
        </div>
      </div>
    </div>
  </div>
</div>
</figure>
<% end %>


</div>

